extends layout

block content
    h2 #{title}
    h3 #{oneMovie.title}
    img(src=oneMovie.image_url alt='NoPic', style='width:20%')
    h6 Movie Description: #{oneMovie.description}
    hr
    a.btn.btn-primary(href='/edit/' + oneMovie._id) Edit
    form(action='/api/favorite/movies', method='POST')
        input(type='hidden', name='movieId', value=''+oneMovie._id)
        input(type='submit', value='add to favorites')
    